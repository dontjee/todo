<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <section class="round">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
  </section>

  <%= yield %>

  <% if Rails.env.development? %>
  <div id="debug">
    <%= debug(params) %>
  </div>
  <% end %>
</body>
</html>
